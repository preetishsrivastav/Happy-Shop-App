<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryText</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryText</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
<!--No Action Bar Theme    -->
  <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
      <item name="windowNoTitle">true</item>
      <item name="windowActionBar">false</item>

  </style>
    
</resources>